<Page x:Class="TicTacToe3D.Pages.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TicTacToe3D.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="640" d:DesignWidth="960"
      Loaded="GamePage_OnLoaded"
      Unloaded="GamePage_OnUnloaded"
      Title="GamePage">

    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MinHeight="300"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="300"></ColumnDefinition>
            <ColumnDefinition Width="*" MinWidth="180" MaxWidth="180"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Canvas 
            Name="GameCanvas"
            ClipToBounds="True"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Background="Black"
            Grid.Column="0">
            
<!--            <Polygon Fill="Red" Points="10,10 100,100 100,10 10,100"></Polygon>-->
        </Canvas>


        <StackPanel
            Margin="15"
            Grid.Column="1"
            Orientation="Vertical">
            <TextBlock
                Text="Kółko i krzyżyk 3D" 
                Margin="10"
                TextAlignment="Center"
                FontSize="21"
                TextWrapping="Wrap"
                Foreground="White"/>
            <CheckBox
                Focusable="False"
                Name="ComputerCheckBox"
                IsChecked="True"
                Content="Gra z komputerem" 
                Margin="10"
                Background="White" 
                Foreground="White"/>
            <Button
                Background="GreenYellow"
                Margin="10"
                Padding="5"
                Content="START" 
                Focusable="False"
                FontWeight="Bold"
                Click="StartButton_OnClick"/>
        </StackPanel>
    </Grid>
</Page>

