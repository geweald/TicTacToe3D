<Page x:Class="TicTacToe3D.Pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TicTacToe3D.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="640" d:DesignWidth="960"
      Title="StartPage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/TicTacToe3D;component/Assets/bg.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <StackPanel
            VerticalAlignment="Center"
            HorizontalAlignment="Center">
            <Button
                Name="Game3"
                Content="START GAME 3x3"
                Padding="15"
                Margin="10"
                Click="Game3_OnClick"/>
            <Button
                Name="Game5"
                Content="START GAME 5x5"
                Padding="15"
                Margin="10"
                Click="Game5_OnClick"/>
        </StackPanel>
        
    </Grid>
</Page>
