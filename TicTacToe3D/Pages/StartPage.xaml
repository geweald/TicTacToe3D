<Page x:Class="TicTacToe3D.Pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TicTacToe3D.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="640" d:DesignWidth="960"
      Loaded="StartPage_OnLoaded"
      Unloaded="StartPage_OnUnloaded"
      Title="StartPage">
    <Page.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" Padding="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A1FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/TicTacToe3D;component/Assets/bg.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Canvas 
            Name="AnimationCanvas" 
            Background="Transparent" 
            HorizontalAlignment="Stretch" 
            IsHitTestVisible="False"
            VerticalAlignment="Stretch">
        </Canvas>
        <StackPanel
            Grid.Column="1"
            VerticalAlignment="Center"
            HorizontalAlignment="Stretch">
            <TextBlock
                Text="CUBE 3"
                Foreground="White"
                TextAlignment="Center"
                FontSize="21"/>
            <Button
                Name="Game3p1"
                Content="1 PLAYER"
                Margin="10"
                FontWeight="Bold"
                FontSize="17"
                Click="Game3p1_OnClick"/>
            <Button
                Name="Game3p2"
                Content="2 PLAYERS"
                Margin="10"
                FontSize="17"
                FontWeight="Bold"
                Click="Game3p2_OnClick"/>

            <TextBlock
                Text="CUBE 5"
                Foreground="White"
                TextAlignment="Center"
                FontSize="21"/>
            <Button
                Name="Game5p1"
                Content="1 PLAYER"
                Margin="10"
                FontWeight="Bold"
                FontSize="17"
                Click="Game5p1_OnClick"/>
            <Button
                Name="Game5p2"
                Content="2 PLAYERS"
                Margin="10"
                FontSize="17"
                FontWeight="Bold"
                Click="Game5p2_OnClick"/>
        </StackPanel>
        
        <Image
            Grid.Column="0" 
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="50"
            MaxWidth="900"
            Source="/TicTacToe3D;component/Assets/logo.png">
        </Image>
    </Grid>
</Page>
